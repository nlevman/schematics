{
  "$schema": "http://json-schema.org/schema",
  "id":"feature",
  "title": "Feature Schema",
  "type": "object",
  "properties":{
    "name":{
      "type":"string",
      "description": "name of all template",
      "default": "app",
    },
    "appRoot":{
      "type":"string"
    },
    "sourceDir":{
      "type":"boolean",
      "default": false,
      "description": "Generate service",
      "alias": "ft"
    },
    "path":{
      "type":"string",
      "default": "src/app/pages",
      "description": "Path to crete all templates"
    }
  }
}
